{
  // Configuration for ts-auto-triage tool
  "typescript": {
    "tscPath": "tsc",
    "lspEntryPoint": "typescript-language-server"
  },
  "azure": {
    "openai": {
      // Update these endpoints as needed for different effort levels
      "endpoints": {
        "low": "https://ryanca-aoai.openai.azure.com/",
        "medium": "https://ryanca-aoai.openai.azure.com/",
        "high": "https://ryanca-aoai.openai.azure.com/"
      },
      "deployments": {
        "low": {
          "chat": "o4-mini",
          "embeddings": "text-embedding-3-large"
        },
        "medium": {
          "chat": "o1",
          "embeddings": "text-embedding-3-large"
        },
        "high": {
          "chat": "o3",
          "embeddings": "text-embedding-3-large"
        }
      }
    }
  },
  "github": {
    "maxIssueBodyLength": 8000,
    "maxCommentLength": 2000,
    "rateLimitRetryDelay": 5000,
    "maxRetries": 3,
    "faqUrl": "https://github.com/microsoft/TypeScript/wiki/FAQ",
    "bots": ["typescript-bot"]
  },
  "ai": {
    "maxReproAttempts": 3,
    "cacheEnabled": true,
    "maxEmbeddingInputLength": 8000
  },
  // Optional: List of repositories to process when no argument is provided
  "repositories": [
    "microsoft/TypeScript"
  ],
  // Optional: Default repository for bare issue numbers (e.g., #9998 -> microsoft/TypeScript#9998)
  "defaultRepo": "microsoft/TypeScript"
}