    "typescript": "^5.9.0"
  },
  "dependencies": {
    "@azure/identity": "^4.0.1",
    "@azure/openai": "^1.0.0-beta.12",
    "@octokit/graphql": "^7.0.2",
    "@octokit/rest": "^20.0.2",
    "@typescript/native-preview": "^7.0.0-dev.20250801.1",
    "openai": "^4.28.0",
