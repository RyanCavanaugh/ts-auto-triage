{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@ryancavanaugh/utils": ["packages/utils/src/index.ts"],
      "@ryancavanaugh/kvcache": ["packages/kvcache/src/index.ts"],
      "@ryancavanaugh/issue-fetcher": ["packages/issue-fetcher/src/index.ts"],
      "@ryancavanaugh/twoslash": ["packages/twoslash/src/index.ts"],
      "@ryancavanaugh/lsp-harness": ["packages/lsp-harness/src/index.ts"],
      "@ryancavanaugh/ai": ["packages/ai/src/index.ts"]
    }
  },
  "files": [],
  "references": [
    { "path": "packages/utils" },
    { "path": "packages/kvcache" },
    { "path": "packages/issue-fetcher" },
    { "path": "packages/twoslash" },
    { "path": "packages/lsp-harness" },
    { "path": "packages/ai" },
    { "path": "packages/cli" }
  ]
}